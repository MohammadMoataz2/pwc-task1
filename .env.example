# PWC Contract Analysis System - Environment Configuration

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here

# Security
SECRET_KEY=your-secret-key-change-this-in-production

# Service URLs (Docker internal network)
API_BASE_URL=http://api:8000
MONGODB_URL=mongodb://admin:password123@mongodb:27017/pwc_contracts?authSource=admin
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Storage Configuration
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/app/storage

# AI Configuration
AI_PROVIDER=openai
OPENAI_MODEL=gpt-4

# Per-task AI providers
PARSING_PROVIDER=library
ANALYSIS_PROVIDER=openai
EVALUATION_PROVIDER=openai

# MongoDB Configuration (for mongo-express service)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=password123
ME_CONFIG_MONGODB_URL=mongodb://admin:password123@mongodb:27017/
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123
ME_CONFIG_MONGODB_ENABLE_ADMIN=true

# API Configuration
DEBUG=false
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8501", "http://localhost:8089"]

# Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123

# Admin Dashboard Authentication (separate from regular users)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123